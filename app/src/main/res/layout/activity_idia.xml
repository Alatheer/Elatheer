<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:background="@color/amber_400"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.elashry.elatheer.idia">
    <TextView
        android:id="@+id/textViw5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/blubuttom"
        android:paddingTop="5dp"
        android:text="بعض الافكار"
        android:textStyle="bold"
        android:textColor="@color/amber_400"
        android:padding="10dp"/>
    <include layout="@layout/content_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/blubuttom"
        android:paddingTop="5dp"
        android:text="اضافة فكرة جديده"
        android:textStyle="bold"
        android:textColor="@color/amber_400"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/Card"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#efefef"
            cardview:cardCornerRadius="2dp"
            cardview:cardElevation="3dp"
            cardview:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:background="@color/colorPrimary"
                >


                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text"
                    android:hint="@string/name"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text"
                    android:hint="@string/phone"
                    android:paddingBottom="5dp"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text"
                    android:hint="ضع عنوان لفكرتك"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/massege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:minLines="3"
                    android:textAlignment="gravity"
                    android:gravity="top"
                    android:hint="اشرح فكرتك ...."
                    android:textColorHint="@color/colorPrimary"
                    android:background="@drawable/text"/>

<LinearLayout
    android:layout_marginTop="16dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/amber_400"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:text="UPlead Image"

                    android:background="@drawable/btnsend"
                    />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

                <TextView
                    android:layout_gravity="left"
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/amber_400"/>
                <TextView
                    android:layout_gravity="left"

                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/amber_400"/>
</LinearLayout>
    </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>




</LinearLayout>
</ScrollView>