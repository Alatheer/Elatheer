<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@color/amber_400" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.elashry.elatheer.Activites.Fahrasa">

        <android.support.v7.widget.CardView
        android:id="@+id/Card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#61ae9d"
        cardview:cardCornerRadius="2dp"
        cardview:cardElevation="3dp"
        cardview:cardUseCompatPadding="true">
        <LinearLayout
            android:background="@color/amber_400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/fhrs"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/jjjT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="نبذة عن الخدمه "
            android:background="@drawable/blubuttom"
            android:textColor="@color/amber_400"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:text=" تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمهتفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه تفاصيل الخدمه" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:background="@drawable/blubuttom"
                android:text="اقسام الخدمه"
                android:textColor="@color/amber_400"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">
            <Button
                android:layout_margin="5dp"
                android:id="@+id/tasnef"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="التصنيف"
                android:background="@drawable/button2"
                android:textColor="@color/colorPrimary"
                android:gravity="center"/>

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/fhrsa"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="الفهرسه"
                    android:background="@drawable/button2"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/head"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/button2"
                    android:gravity="center"
                    android:text="رؤوس الموضوع"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/t1"
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/blubuttom"
                    android:text="فهرسه RED :"
                    android:textColor="@color/amber_400"
                    android:textSize="15dp" />
                >


                <TextView
                    android:id="@+id/dt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/amber_50"
                    android:gravity="center"
                    android:text=" تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه "
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/t2"
                    style="@style/AlertDialog.AppCompat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="فهرسه مارك :"
                    android:textColor="@color/amber_400"
                    android:background="@drawable/blubuttom"

                    android:textSize="15dp" />
                >


                <TextView
                    android:id="@+id/dt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/amber_50"
                    android:gravity="center"
                    android:text="تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه تفاصيل الفهرسه "
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

</ScrollView>
