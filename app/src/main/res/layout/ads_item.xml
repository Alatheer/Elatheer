<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/amber_400">

    <ImageView
        android:id="@+id/adsimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/design"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text=" التسويق الالكتروني  "
            android:background="@drawable/button1"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/adscontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:text="سنساعدك في التخطيط لتنفيذ تطبيق الجوال، بدءاً من تحسين الفكر، رسم الخبرة، تصميم النماذج الأولي، واختبارها علي المستخدمين المحتملين."   />
    </LinearLayout>

</LinearLayout>