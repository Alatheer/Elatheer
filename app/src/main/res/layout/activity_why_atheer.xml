<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/amber_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.elashry.elatheer.WhyAtheer">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="  ليه تعمل تطبيقك عند الأثير "
        android:background="@drawable/blubuttom"
        android:textColor="@color/amber_400"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/design"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/jjjT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="  تصميمات متجاوبة "
            android:background="@drawable/button1"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:text="سنساعدك في التخطيط لتنفيذ تطبيق الجوال، بدءاً من تحسين الفكر، رسم الخبرة، تصميم النماذج الأولي، واختبارها علي المستخدمين المحتملين."   />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/amber_400">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/like"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="   تطبيقات مميزة "
            android:background="@drawable/button1"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:text="سنساعدك في التخطيط لتنفيذ تطبيق الجوال، بدءاً من تحسين الفكر، رسم الخبرة، تصميم النماذج الأولي، واختبارها علي المستخدمين المحتملين."   />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/amber_200">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/smart"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="   سهولة التطبيق "
                android:background="@drawable/button1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_margin="5dp"
                android:text="سنساعدك في التخطيط لتنفيذ تطبيق الجوال، بدءاً من تحسين الفكر، رسم الخبرة، تصميم النماذج الأولي، واختبارها علي المستخدمين المحتملين."   />
        </LinearLayout>
    </LinearLayout>
</LinearLayout></ScrollView>
